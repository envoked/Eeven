#mainCol
    %br
    - 3.times do |i|
        - if i < 2
            %input{:type=>'text',:class=>"name",:value=>i} paid $
            %input{:type=>'text',:class=>"amount money",:value=> (i+1) *10 }
            for
            %input{:type=>'text',:id=>"for[#{i}]"} 
        - if i >= 2
            %input{:type=>'text',:class=>"name"} paid $
            %input{:type=>'text',:class=>"amount money"}
            for
            %input{:type=>'text',:id=>"for[#{i}]"}       
    
